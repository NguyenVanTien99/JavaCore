package as_401;

public class Maximum {
	
	public void swap(int a, int b) {
		a = a+b;
		b = a-b;
		a = a-b;
	}
	
	public void sort(Integer[] list) {
		for (int i = 0; i < list.length - 1; i++) {
			for (int j = i + 1; j < list.length; j++) {
				if(list[i] < list[j]) {
					swap(list[i], list[j]);
				}
			}
		}
	}
	
	public int findMaxValue(Integer[] list) {
		sort(list);
		return list[0];
		
	}
	
	public int findSecondMaxValue(Integer[] list) {
		sort(list);
		return list[1];
		
	}
	
	
	public static void main(String[] args) {
		Maximum maximum = new Maximum();
		
		Integer arr[] = {5,20,33,4,5,67,3,4,6};
		
		System.out.println(maximum.findMaxValue(arr));
		
		System.out.println(maximum.findSecondMaxValue(arr));
	}

}
